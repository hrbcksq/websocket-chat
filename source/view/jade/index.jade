body(ng-controller='ChatController as chat')
	.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header 
				button(type="button", data-toggle="collapse", data-target=".navbar-collapse").navbar-toggle
					span.icon-bar					
				.navbar-brand Chat Application
				p.navbar-text
					span.hidden-xs Singed in as
					span.clip  Name
			.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href="") About						
	.container.body-content.messager
		.row.messages-row.col-md-8.col-md-offset-2.col-sm-12
				.messages#autoscroll
					ul
						li(ng-repeat='message in chat.messages', ng-class='{self: message.self, system: message.system}')
							small.nickname {{message.sender}}
							.message
								span {{message.body}}

				.row.send-row
					form(ng-submit='chat.sendMessage(chat.message)')
						.input-group
							input.form-control(type="text", placeholder="Type a message", ng-model="chat.message.body")
							span.input-group-btn
								button.btn.btn-primary(ng-disabled='chat.checkMessage()')
									.glyphicon.glyphicon-send.custom-ico
									span Send	
.modal-module(ng-controller="ModalController as modal")
	input(type='button', ng-click="modal.toggleModal()")
	modal-directive(title="title", body="body", footer="footer", visible="{{modal.showModal}}")
