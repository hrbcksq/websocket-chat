#auth-view.modal.fade(data-backdrop="static")
	.modal-dialog.modal-sm.modal-md
		form(name="loginform", ng-controller='AuthorizeController as auth', ng-submit="auth.SingIn()", novalidate)#login-form.modal-content
			.modal-header
				button.close(data-dismiss='modal', area-label="Close", ng-disabled="!loginform.$valid")
					span(area-hidden='true') &times;
				h4.modal-title 
					.glyphicon.glyphicon-leaf
					span   Sing up			
			.modal-body 				
					.form-group(ng-class="{'has-error' : !loginform.logininput.$valid}")
						label(for="login-input") Login
						input#login-input.form-control(name='logininput', type='text', placeholder="Enter your login", ng-model='auth.name', required="true", ng-minlength="5", ng-maxlength="15")						
					.form-group.form-group-sm.small.float
						div.text-danger.text-center(ng-messages="loginform.logininput.$error", role="alert")
							div(ng-message="required") Please enter your login
							div(ng-message="minlength") Your field is too short
							div(ng-message="maxlength") Your field is too long						
					.form-group						
						.checkbox
							label
								input(type='checkbox', ng-model="auth.rememberme", value='true', required='false')
								span Remember me
			.modal-footer
				{{loginform.$valid}}
				button.btn.btn-primary(type="submit", ng-disabled="!loginform.$valid") Sing up
				button.btn.btn-default(data-dissmiss="modal", ng-disabled="!loginform.$valid") Close